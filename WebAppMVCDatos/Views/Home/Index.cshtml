@model IEnumerable<WebAppMVCDatos.Models.Producto>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <table>
            <tr>
                <th>Codigo</th>
                <th>Producto</th>
                <th>Precio</th>
                <th>Borrar</th>
                <th>Modificar</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Precio</td>
                    <td><a href="/Home/Baja?pId=@item.Id">borrar</a></td>
                    <td><a>modificar</a></td>
                </tr>
            }
        </table>
        <p><a href="/Home/Alta">agregar</a></p>
    </div>
</body>
</html>


